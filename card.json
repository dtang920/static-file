{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "TextBlock",
            "text": "${root[0].name}",
            "wrap": true
        },
        {
            "type": "Container",
            "$data": "${root}",
            "items": [
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": "stretch",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "${name}",
                                            "wrap": true
                                        }
                                    ]
                                },
                                {
                                    "type": "Column",
                                    "width": "stretch"
                                },
                                {
                                    "type": "Column",
                                    "width": "stretch"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
