{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://rspec.info/images/logo.png",
                            "size": "Medium"
                        }
                    ],
                    "width": "auto"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Tests",
                            "size": "Large",
                            "weight": "Bolder",
                            "isSubtle": false,
                            "spacing": "Medium",
                            "horizontalAlignment": "Left"
                        },
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": "stretch",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "Total: ${tests}",
                                            "size": "Medium",
                                            "weight": "Bolder",
                                            "isSubtle": false,
                                            "spacing": "Medium"
                                        }
                                    ]
                                },
                                {
                                    "type": "Column",
                                    "width": "stretch",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "Failures: ${failures}",
                                            "size": "Medium",
                                            "weight": "Bolder",
                                            "isSubtle": false,
                                            "spacing": "Medium",
                                            "color": "Attention"
                                        }
                                    ]
                                },
                                {
                                    "type": "Column",
                                    "width": "stretch",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "Time: ${time}",
                                            "size": "big",
                                            "weight": "Bolder",
                                            "isSubtle": false,
                                            "spacing": "Small"
                                        }
                                    ]
                                }
                            ]
                        }
                    ],
                    "width": "stretch"
                }
            ],
            "style": "default"
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.6"
}
