{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://rspec.info/images/logo.png",
                            "size": "Medium"
                        }
                    ],
                    "width": "auto"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Tests",
                            "size": "ExtraLarge",
                            "weight": "Bolder",
                            "isSubtle": false,
                            "spacing": "Medium",
                            "horizontalAlignment": "Left"
                        },
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": "stretch",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "${tests}",
                                            "size": "Medium",
                                            "weight": "Bolder",
                                            "isSubtle": false,
                                            "spacing": "Medium"
                                        }
                                    ]
                                },
                                {
                                    "type": "Column",
                                    "width": "auto",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "Failures: ${failures}",
                                            "size": "Medium",
                                            "weight": "Bolder",
                                            "isSubtle": false,
                                            "spacing": "Medium",
                                            "color": "Attention"
                                        }
                                    ]
                                },
                                {
                                    "type": "Column",
                                    "width": "auto",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "Time: ${time}",
                                            "size": "Medium",
                                            "weight": "Bolder",
                                            "isSubtle": false,
                                            "spacing": "Medium"
                                        }
                                    ]
                                }
                            ]
                        }
                    ],
                    "width": "stretch"
                }
            ],
            "style": "default"
        },
    {
      "type": "ColumnSet",
      "style": "default",
      "separator": true,
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "FactSet",
              "facts": [
                {
                  "title": "File:",
                  "value": "${file}"
                }
              ],
              "separator": true,
              "$data": "${testcases}"
            }
          ],
          "width": "stretch"
        }
      ]
    }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.6"
}
