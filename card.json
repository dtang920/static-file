{
    "type": "AdaptiveCard",
    "body": [
      {
        "type": "ColumnSet",
        "columns": [
          {
            "type": "Column",
            "items": [
              {
                "type": "Image",
                "url": "https://rspec.info/images/logo.png",
                "size": "medium"
              }
            ],
            "width": "auto"
          },
          {
            "type": "Column",
            "items": [
              {
                "type": "TextBlock",
                "text": "Tests",
                "wrap": true,
                "size": "medium",
                "weight": "bolder",
                "isSubtle": false,
                "spacing": "medium"
              },
              {
                "type": "TextBlock",
                "text": "Number of Issues: ${tests}",
                "wrap": true,
                "size": "Small",
                "weight": "Lighter",
                "isSubtle": true,
                "spacing": "Small"
              }
            ],
            "width": "stretch"
          }
        ],
        "style": "default"
      }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5"
  }
