{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.6",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://rspec.info/images/logo.png",
                            "size": "Small"
                        }
                    ],
                    "width": "auto"
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Tests",
                            "size": "ExtraLarge",
                            "weight": "Bolder",
                            "isSubtle": false,
                            "spacing": "Medium",
                            "horizontalAlignment": "Left"
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "$data": "${testsuites}",
            "items": [
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": "20px",
                                    "verticalContentAlignment": "Center",
                                    "selectAction": {
                                        "type": "Action.ToggleVisibility",
                                        "title": "Previous",
                                        "targetElements": [
                                            "img_set_2",
                                            "img_set_1"
                                        ]
                                    },
                                    "style": "emphasis"
                                },
                                {
                                    "type": "Column",
                                    "width": 100,
                                    "items": [
                                        {
                                            "type": "Container",
                                            "items": [
                                                {
                                                    "type": "ColumnSet",
                                                    "columns": [
                                                        {
                                                            "type": "Column",
                                                            "width": 25,
                                                            "items": [
                                                                {
                                                                    "type": "TextBlock",
                                                                    "text": "TestSuite: ${name}",
                                                                    "size": "Medium",
                                                                    "weight": "Bolder"
                                                                }
                                                            ]
                                                        },
                                                        {
                                                            "type": "Column",
                                                            "width": 25,
                                                            "items": [
                                                                {
                                                                    "type": "TextBlock",
                                                                    "text": "Total: ${tests}",
                                                                    "size": "Medium",
                                                                    "weight": "Bolder"
                                                                }
                                                            ]
                                                        },
                                                        {
                                                            "type": "Column",
                                                            "width": 25,
                                                            "items": [
                                                                {
                                                                    "type": "TextBlock",
                                                                    "text": "Failures: ${failures}",
                                                                    "size": "Medium",
                                                                    "weight": "Bolder",
                                                                    "color": "Attention"
                                                                }
                                                            ]
                                                        },
                                                        {
                                                            "type": "Column",
                                                            "width": 30,
                                                            "items": [
                                                                {
                                                                    "type": "TextBlock",
                                                                    "text": "Time: ${time}",
                                                                    "size": "Medium",
                                                                    "weight": "Bolder"
                                                                }
                                                            ]
                                                        }
                                                    ]
                                                },
                                                {
                                                    "type": "Container",
                                                    "$data": "${ where (testcases, case, case.failure != null) }",
                                                    "items": [
                                                        {
                                                            "type": "TextBlock",
                                                            "text": "Name: ${name}",
                                                            "size": "Medium",
                                                            "wrap": true,
                                                            "color": "${if(failure == null, 'default', 'attention')}"
                                                        },
                                                        {
                                                            "type": "TextBlock",
                                                            "text": "Classname: ${classname}",
                                                            "isSubtle": true,
                                                            "size": "Medium"
                                                        },
                                                        {
                                                            "type": "TextBlock",
                                                            "text": "${file}",
                                                            "isSubtle": true,
                                                            "size": "Medium"
                                                        },
                                                        {
                                                            "type": "Container",
                                                            "$when": "${failure != null}",
                                                            "items": [
                                                                {
                                                                    "type": "TextBlock",
                                                                    "text": "${failure.message}",
                                                                    "size": "Small",
                                                                    "isSubtle": true,
                                                                    "wrap": true
                                                                },
                                                                {
                                                                    "type": "TextBlock",
                                                                    "text": "${failure.type}",
                                                                    "size": "Small",
                                                                    "isSubtle": true,
                                                                    "wrap": true
                                                                },
                                                                {
                                                                    "type": "TextBlock",
                                                                    "text": "${failure.text}",
                                                                    "size": "Small",
                                                                    "isSubtle": true,
                                                                    "wrap": true
                                                                }
                                                            ],
                                                            "style": "accent"
                                                        }
                                                    ],
                                                    "separator": true,
                                                    "horizontalAlignment": "Left"
                                                }
                                            ]
                                        }
                                    ],
                                    "bleed": true
                                },
                                {
                                    "type": "Column",
                                    "width": "20px",
                                    "verticalContentAlignment": "Center",
                                    "selectAction": {
                                        "type": "Action.ToggleVisibility",
                                        "title": "Next",
                                        "targetElements": [
                                            "img_set_1",
                                            "img_set_2"
                                        ]
                                    },
                                    "style": "emphasis"
                                }
                            ]
                        }
                    ],
                    "bleed": true,
                    "spacing": "None",
                    "id": "img_set_1"
                }
            ],
            "rtl": false
        }
    ],
    "fallbackText": "dssddsds"
}
