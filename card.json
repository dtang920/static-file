{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "url": "https://rspec.info/images/logo.png",
              "size": "medium"
            }
          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "Tests",
              "wrap": true,
              "size": "medium",
              "weight": "bolder",
              "isSubtle": false,
              "spacing": "medium"
            },
            {
              "type": "TextBlock",
              "text": "Number of Issues: ${tests}",
              "wrap": true,
              "size": "Small",
              "weight": "Lighter",
              "isSubtle": true,
              "spacing": "Small"
            }
          ],
          "width": "stretch"
        }
      ],
      "style": "default"
    },
    {
      "type": "ColumnSet",
      "style": "default",
      "separator": true,
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "FactSet",
              "facts": [
                {
                  "title": "Name:",
                  "value": "${name}"
                },
                {
                  "title": "Time:",
                  "value": "${formatNumber(time, 0)}"
                },
                {
                  "title": "Classname:",
                  "value": "${classname}"
                },
                {
                  "title": "File:",
                  "value": "${file}"
                }
              ],
              "separator": true,
              "$data": "${testcases}"
            }
          ],
          "width": "stretch"
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5"
}
