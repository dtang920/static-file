{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://rspec.info/images/logo.png",
                            "size": "Small"
                        }
                    ],
                    "width": "auto"
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Tests",
                            "size": "ExtraLarge",
                            "weight": "Bolder",
                            "isSubtle": false,
                            "spacing": "Medium",
                            "horizontalAlignment": "Left"
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "$data": "${testsuites}",
            "items": [
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": "10px",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "&lt;"
                                        }
                                    ],
                                    "verticalContentAlignment": "Center",
                                    "selectAction": {
                                        "type": "Action.ToggleVisibility",
                                        "title": "Previous",
                                        "targetElements": [
                                            "img_set_4",
                                            "img_set_1"
                                        ]
                                    }
                                },
                                {
                                    "type": "Column",
                                    "width": "stretch",
                                    "items": [
                                        {
                                            "type": "Container",
                                            "items": [
                                                {
                                                    "type": "ColumnSet",
                                                    "columns": [
                                                        {
                                                            "type": "Column",
                                                            "width": "stretch",
                                                            "items": [
                                                                {
                                                                    "type": "TextBlock",
                                                                    "text": "Name: ${name}",
                                                                    "size": "Medium",
                                                                    "weight": "Bolder",
                                                                    "isSubtle": false,
                                                                    "spacing": "Medium",
                                                                    "horizontalAlignment": "Left"
                                                                }
                                                            ]
                                                        },
                                                        {
                                                            "type": "Column",
                                                            "width": "stretch",
                                                            "items": [
                                                                {
                                                                    "type": "TextBlock",
                                                                    "text": "Total: ${tests}",
                                                                    "size": "Medium",
                                                                    "weight": "Bolder",
                                                                    "isSubtle": false,
                                                                    "spacing": "Medium",
                                                                    "horizontalAlignment": "Left"
                                                                }
                                                            ]
                                                        },
                                                        {
                                                            "type": "Column",
                                                            "width": "auto",
                                                            "items": [
                                                                {
                                                                    "type": "TextBlock",
                                                                    "text": "Failures: ${failures}",
                                                                    "size": "Medium",
                                                                    "weight": "Bolder",
                                                                    "isSubtle": false,
                                                                    "spacing": "Medium",
                                                                    "color": "Attention",
                                                                    "horizontalAlignment": "Left"
                                                                }
                                                            ]
                                                        },
                                                        {
                                                            "type": "Column",
                                                            "width": "auto",
                                                            "items": [
                                                                {
                                                                    "type": "TextBlock",
                                                                    "text": "Time: ${time}",
                                                                    "size": "Medium",
                                                                    "weight": "Bolder",
                                                                    "isSubtle": false,
                                                                    "spacing": "Medium",
                                                                    "horizontalAlignment": "Left"
                                                                }
                                                            ]
                                                        }
                                                    ]
                                                },
                                                {
                                                    "type": "Container",
                                                    "$data": "${testcases}",
                                                    "items": [
                                                        {
                                                            "type": "TextBlock",
                                                            "text": "${name}",
                                                            "size": "Medium",
                                                            "wrap": true,
                                                            "color": "${if(failure == null, 'default', 'attention')}"
                                                        },
                                                        {
                                                            "type": "TextBlock",
                                                            "text": "${classname}",
                                                            "isSubtle": true,
                                                            "size": "Medium"
                                                        },
                                                        {
                                                            "type": "TextBlock",
                                                            "text": "${file}",
                                                            "isSubtle": true,
                                                            "size": "Medium",
                                                            "isVisible": "${failure != null}"
                                                        }
                                                    ],
                                                    "separator": true,
                                                    "horizontalAlignment": "Left"
                                                }
                                            ]
                                        }
                                    ],
                                    "bleed": true
                                },
                                {
                                    "type": "Column",
                                    "width": "10px",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "&gt;"
                                        }
                                    ],
                                    "verticalContentAlignment": "Center",
                                    "selectAction": {
                                        "type": "Action.ToggleVisibility",
                                        "title": "Next",
                                        "targetElements": [
                                            "img_set_1",
                                            "img_set_2"
                                        ]
                                    }
                                }
                            ],
                            "horizontalAlignment": "Center"
                        }
                    ],
                    "minHeight": "1px",
                    "bleed": true,
                    "spacing": "None",
                    "id": "img_set_1"
                }
            ]
        }
    ]
}
